
build_set "reference-balanced" do

  balance_nodes do
    mid_point 1600

    upper_task do
      nodes do
        instance "xlarge"
        count 15
        slots 3
      end

      args do
        mode :parallel
      end
    end

    lower_task do
      nodes do
        instance "medium"
        count 30
        slots 6
      end
    end
  end

  task "test" do
    no_arch_all
    mode "binary-only"
  end

  task "reference" do
    no_arch_all
    mode "binary-only"
    log_id "normal"
  end

end
